params { 

    // input sequences [FASTQ or FASTQ.GZ]
    seqs ='example-data/reads/ERR*_chrX_{1,2}.fastq.gz'

    // genome [FASTA]
    genome = "$baseDir/example-data/genome/chrX.fa"

    // genome index [HISAT2 INDEX]
    index = "$baseDir/example-data/index/chrX.fa.index"

    // annotation [GTF]
    annotation = "$baseDir/example-data/annotation/hg38_chrX_ucsc.annotated.gtf"

    // create genome index during run, otherwise index must be provided [BOOLEAN]
    run_index = true

    // output directory [DIR]
    output = "$baseDir/results/"

} 

docker {
    enabled = true
    fixOwnership = true
}

process {
    container = 'cbcrg/tuxedo-nf@sha256:8663c6ff510cb347b20fc2315cd3009d1b2567a36020a62bd4053182c5d01d8c'
    publishDir = [path: {params.output}, mode: 'copy', overwrite: 'true']
} 
